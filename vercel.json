{
    "version": 2,
    "builds": [
      {
        "src": "Backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/Backend/server.js"
      },
      {
        "src": "/img/(.*)",
        "dest": "/public/img/$1"
      },
      {
        "src": "/",
        "dest": "/public/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }