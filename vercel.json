{
  "version": 2,
  "builds": [
    {
      "src": "Backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/Public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Backend/server.js"
    },
    {
      "src": "/img/(.*)",
      "dest": "/Frontend/Public/img/$1"
    },
    {
      "src": "/",
      "dest": "/Frontend/Public/Principal/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/Public/Principal/$1"
    }
  ]
}